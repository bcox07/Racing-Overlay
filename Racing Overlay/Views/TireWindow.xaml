<Window x:Class="RacingOverlay.TireWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RacingOverlay"
        mc:Ignorable="d"
        Title="TireWindow" Height="220" Width="140" Background="#00000000" Foreground="#D8000000" Opacity="0.85" WindowStyle="None" AllowsTransparency="True">
    <Grid x:Name="fuelGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"></RowDefinition>
            <RowDefinition Height="110"></RowDefinition>
        </Grid.RowDefinitions>
        <Border x:Name="LFTempBorder" CornerRadius="15" Background="#FF32A229" Margin="5" Grid.Row="0" Grid.Column="0">
            <TextBlock x:Name="LFTemp" Text="100°"  Foreground="#D8FFFFFF" FontSize="13" TextAlignment="Center"  Padding="0 20 0 0" FontWeight="Bold"/>
        </Border>
        <Border x:Name="LRTempBorder" CornerRadius="15" Margin="5" Grid.Row="1" Grid.Column="0">
            <TextBlock x:Name="LRTemp" Text="100°"  Foreground="#D8FFFFFF" FontSize="13" TextAlignment="Center"  Padding="0 20 0 0" FontWeight="Bold"/>
        </Border>
        <Border x:Name="RFTempBorder" CornerRadius="15" Background="#FF32A229" Margin="5" Grid.Row="0" Grid.Column="1">
            <TextBlock x:Name="RFTemp" Text="100°"  Foreground="#D8FFFFFF" FontSize="13" TextAlignment="Center" Grid.Row="0" Grid.Column="1" Padding="0 20 0 0"  FontWeight="Bold"/>
        </Border>
        <Border x:Name="RRTempBorder" CornerRadius="15" Background="#FF32A229" Margin="5" Grid.Row="1" Grid.Column="1">
            <TextBlock x:Name="RRTemp" Text="100°" Foreground="#D8FFFFFF" FontSize="13" TextAlignment="Center" Grid.Row="1" Grid.Column="1" Padding="0 20 0 0" FontWeight="Bold"/>
        </Border>
        <TextBlock x:Name="LFWear" Text="100%" Background="Transparent" Foreground="#D8FFFFFF" FontSize="13" TextAlignment="Center" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Margin="0 0 0 25" Height="20" Width="44" FontWeight="Bold"/>
        <TextBlock x:Name="LRWear" Text="100%" Background="Transparent" Foreground="#D8FFFFFF" FontSize="13" TextAlignment="Center" Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" Margin="0 0 0 25" Height="20" Width="44" FontWeight="Bold"/>
        <TextBlock x:Name="RFWear" Text="100%" Background="Transparent" Foreground="#D8FFFFFF" FontSize="13" TextAlignment="Center" Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" Margin="0 0 0 25" Height="20" Width="44" FontWeight="Bold"/>
        <TextBlock x:Name="RRWear" Text="100%" Background="Transparent" Foreground="#D8FFFFFF" FontSize="13" TextAlignment="Center" Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" Margin="0 0 0 25" Height="20" Width="44" FontWeight="Bold"/>
    </Grid>
</Window>
