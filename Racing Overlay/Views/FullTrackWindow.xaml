<Window x:Class="RacingOverlay.Windows.FullTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LiveTrackWindow" Height="300" Width="400"  Background="#00000000"  WindowStyle="None"
        Opacity="0.9" AllowsTransparency="True">
    <Window.Resources>
        <Style x:Key="Pixel" TargetType="{x:Type TextBox}">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="14"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Panel.ZIndex" Value="99"/>
            <Setter Property="Visibility" Value="Hidden"/>
        </Style>
    </Window.Resources>
    
    <Canvas Name="TrackCanvas" Opacity="0.9" Cursor="Arrow" ClipToBounds="True" Margin="0,0,0,0">
        <TextBox x:Name="Player" Visibility="Hidden" TextWrapping="Wrap" Text="1" Width="30" Height="30" HorizontalAlignment="Left" TextAlignment="Center" >
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox Style="{StaticResource Pixel}" Background="Red"
            Canvas.Left="56" Canvas.Top="228"   />
        <TextBox Style="{StaticResource Pixel}" Background="Orange"
            Canvas.Left="343" Canvas.Top="136"  />
        <TextBox Style="{StaticResource Pixel}" Background="Yellow"
            Canvas.Left="332" Canvas.Top="136"  />
        <TextBox Style="{StaticResource Pixel}" Background="Green"
            Canvas.Left="321" Canvas.Top="140"  />
        <TextBox Style="{StaticResource Pixel}" Background="Blue"
            Canvas.Left="70" Canvas.Top="165"   />
        <TextBox Style="{StaticResource Pixel}" Background="Indigo"
            Canvas.Left="352" Canvas.Top="133"  />
        <TextBox Style="{StaticResource Pixel}" Background="Violet"
            Canvas.Left="234" Canvas.Top="140"  />
        <Image x:Name="TrackMap" Width="400" Height="300" Source="/TrackMaps/200-zolder/map.png"></Image>

    </Canvas>
</Window>