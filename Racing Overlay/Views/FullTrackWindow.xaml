<Window x:Class="RacingOverlay.Windows.FullTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LiveTrackWindow" Height="300" Width="400" Background="Transparent"  WindowStyle="None"
        Opacity="0.9" AllowsTransparency="True" >
    <Window.Resources>
        <Style x:Key="Pixel" TargetType="{x:Type TextBox}">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="14"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Panel.ZIndex" Value="99"/>
            <Setter Property="Visibility" Value="Hidden"/>
        </Style>
        <ResourceDictionary x:Key="MapDictionary">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/assets/tracks/127-road atlanta/map.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Canvas Name="TrackCanvas" Opacity="0.9" Cursor="Arrow" ClipToBounds="True" Margin="0,0,0,0">
        <TextBox x:Name="Player" Visibility="Hidden" TextWrapping="Wrap" Text="1" Width="30" Height="30" HorizontalAlignment="Left" TextAlignment="Center" >
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="22"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox Style="{StaticResource Pixel}" Background="Red"
            Canvas.Left="7.8" Canvas.Top="112.6" HorizontalAlignment="Center" VerticalAlignment="Top"   />
        <TextBox Style="{StaticResource Pixel}" Background="Orange"
            Canvas.Left="18" Canvas.Top="131" HorizontalAlignment="Center" VerticalAlignment="Top"  />
        <TextBox Style="{StaticResource Pixel}" Background="Yellow"
            Canvas.Left="9.3" Canvas.Top="121" HorizontalAlignment="Center" VerticalAlignment="Top"  />
        <TextBox Style="{StaticResource Pixel}" Background="Green"
            Canvas.Left="11.8" Canvas.Top="105" HorizontalAlignment="Left" VerticalAlignment="Center"  />
        <TextBox Style="{StaticResource Pixel}" Background="Blue"
            Canvas.Left="19.8" Canvas.Top="95" HorizontalAlignment="Left" VerticalAlignment="Top"   />
        <TextBox Style="{StaticResource Pixel}" Background="Indigo"
            Canvas.Left="28.3" Canvas.Top="85" HorizontalAlignment="Left" VerticalAlignment="Center"  />
        <TextBox Style="{StaticResource Pixel}" Background="Violet"
            Canvas.Left="36.5" Canvas.Top="75.5" HorizontalAlignment="Left" VerticalAlignment="Center"  />
        <Viewbox x:Name="TrackMapViewbox" Stretch="Uniform" Width="360" Height="270" Margin="20,15,0,0">
            <Image x:Name="TrackMap" Width="Auto" Height="Auto">
                <Image.Source>
                    <DrawingImage Drawing="{StaticResource map_xaml}">
                    </DrawingImage>
                </Image.Source>
            </Image>
        </Viewbox>
    </Canvas>
</Window>