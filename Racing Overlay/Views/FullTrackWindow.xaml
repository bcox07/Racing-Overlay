<Window x:Class="RacingOverlay.Windows.FullTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LiveTrackWindow" Height="300" Width="400" Background="Transparent"  WindowStyle="None" AllowsTransparency="True" Cursor="Hand" >
    <Window.Resources>
        <Style x:Key="PixelGrid" TargetType="{x:Type Grid}">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30"/>
            <Setter Property="Visibility" Value="Hidden"/>
        </Style>
        <Style x:Key="PixelText" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="0.8" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="Pixel" TargetType="{x:Type Ellipse}">
            <Setter Property="Width" Value="1.5" />
            <Setter Property="Height" Value="1.5"/>
        </Style>
        <ResourceDictionary x:Key="MapDictionary">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/assets/tracks/403-spielberg/map.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Canvas Name="TrackCanvas" Opacity="0.9" ClipToBounds="True" Margin="0,0,0,0" >
        <TextBox x:Name="Player" Visibility="Hidden" TextWrapping="Wrap" Text="1" Width="30" Height="30" HorizontalAlignment="Left" TextAlignment="Center" >
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="22"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Grid Style="{StaticResource PixelGrid}"    Canvas.Left="79.25 "	Canvas.Top="87.11"   Panel.ZIndex="100"><Ellipse  Style="{StaticResource Pixel}" Fill="Red"></Ellipse><TextBlock Style="{StaticResource PixelText}" Text="99" /></Grid>
        <Grid Style="{StaticResource PixelGrid}"    Canvas.Left="88.09 "	Canvas.Top="85.35"   Panel.ZIndex="100"><Ellipse  Style="{StaticResource Pixel}" Fill="OrangeRed"></Ellipse><TextBlock Style="{StaticResource PixelText}" Text="99" /></Grid>
        <Grid Style="{StaticResource PixelGrid}"    Canvas.Left="96.95 "	Canvas.Top="81.65"   Panel.ZIndex="100"><Ellipse  Style="{StaticResource Pixel}" Fill="Orange"></Ellipse><TextBlock Style="{StaticResource PixelText}" Text="99" /></Grid>
        <Grid Style="{StaticResource PixelGrid}"    Canvas.Left="105.81"	Canvas.Top="77.94"   Panel.ZIndex="100"><Ellipse  Style="{StaticResource Pixel}" Fill="Yellow"></Ellipse><TextBlock Style="{StaticResource PixelText}" Text="99" /></Grid>
        <Grid Style="{StaticResource PixelGrid}"    Canvas.Left="114.88"	Canvas.Top="74.73"    Panel.ZIndex="100"><Ellipse  Style="{StaticResource Pixel}" Fill="GreenYellow"></Ellipse><TextBlock Style="{StaticResource PixelText}" Text="99" /></Grid>        
        <Grid Style="{StaticResource PixelGrid}"    Canvas.Left="123.74"	Canvas.Top="74.12"    Panel.ZIndex="100"><Ellipse  Style="{StaticResource Pixel}" Fill="Green"></Ellipse><TextBlock Style="{StaticResource PixelText}" Text="99" /></Grid>
        <Grid Style="{StaticResource PixelGrid}"    Canvas.Left="132.6 "	Canvas.Top="75.72"     Panel.ZIndex="100"><Ellipse  Style="{StaticResource Pixel}" Fill="Blue"></Ellipse><TextBlock Style="{StaticResource PixelText}" Text="99" /></Grid>
        <Grid Style="{StaticResource PixelGrid}"    Canvas.Left="141.46"	Canvas.Top="79.81"     Panel.ZIndex="100"><Ellipse  Style="{StaticResource Pixel}" Fill="Indigo"></Ellipse><TextBlock Style="{StaticResource PixelText}" Text="99" /></Grid>
        <Grid Style="{StaticResource PixelGrid}"    Canvas.Left="150.53"	Canvas.Top="84.7 "    Panel.ZIndex="100"><Ellipse  Style="{StaticResource Pixel}" Fill="Violet"></Ellipse><TextBlock Style="{StaticResource PixelText}" Text="99" /></Grid>
        <Grid Style="{StaticResource PixelGrid}"    Canvas.Left="111.99"	Canvas.Top="156.45"     Panel.ZIndex="100"><Ellipse  Style="{StaticResource Pixel}" Fill="White"></Ellipse><TextBlock Style="{StaticResource PixelText}" Text="99" /></Grid>
        <Grid Style="{StaticResource PixelGrid}"    Canvas.Left="97.83 "	Canvas.Top="151.83"     Panel.ZIndex="100"><Ellipse  Style="{StaticResource Pixel}" Fill="Gray"></Ellipse><TextBlock Style="{StaticResource PixelText}" Text="99" /></Grid>
        

        
        <Viewbox x:Name="TrackMapViewbox" Stretch="Uniform" Width="360" Height="270" Margin="20,15,0,0">
            <Image x:Name="TrackMap" Width="Auto" Height="Auto">
                <Image.Source>
                    <DrawingImage Drawing="{StaticResource map_xaml}">
                    </DrawingImage>
                </Image.Source>
            </Image>
        </Viewbox>
    </Canvas>
</Window>