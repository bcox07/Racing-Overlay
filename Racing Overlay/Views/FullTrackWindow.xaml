<Window x:Class="RacingOverlay.Windows.FullTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LiveTrackWindow" Height="300" Width="400" Background="Transparent"  WindowStyle="None"
        Opacity="0.9" AllowsTransparency="True" >
    <Window.Resources>
        <Style x:Key="Pixel" TargetType="{x:Type TextBox}">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="14"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Panel.ZIndex" Value="99"/>
            <Setter Property="Visibility" Value="Hidden"/>
        </Style>
    </Window.Resources>

    <Canvas Name="TrackCanvas" Opacity="0.9" Cursor="Arrow" ClipToBounds="True" Margin="0,0,0,0">
        <TextBox x:Name="Player" Visibility="Hidden" TextWrapping="Wrap" Text="1" Width="30" Height="30" HorizontalAlignment="Left" TextAlignment="Center" >
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="22"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox Style="{StaticResource Pixel}" Background="Red"
            Canvas.Left="90" Canvas.Top="89" HorizontalAlignment="Left" VerticalAlignment="Center"   />
        <TextBox Style="{StaticResource Pixel}" Background="Orange"
            Canvas.Left="94" Canvas.Top="96" HorizontalAlignment="Left" VerticalAlignment="Top"  />
        <TextBox Style="{StaticResource Pixel}" Background="Yellow"
            Canvas.Left="99.7" Canvas.Top="102" HorizontalAlignment="Left" VerticalAlignment="Center"  />
        <TextBox Style="{StaticResource Pixel}" Background="Green"
            Canvas.Left="107" Canvas.Top="106.7" HorizontalAlignment="Center" VerticalAlignment="Top"  />
        <TextBox Style="{StaticResource Pixel}" Background="Blue"
            Canvas.Left="115" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Center"   />
        <TextBox Style="{StaticResource Pixel}" Background="Indigo"
            Canvas.Left="63" Canvas.Top="214" HorizontalAlignment="Left" VerticalAlignment="Top"  />
        <TextBox Style="{StaticResource Pixel}" Background="Violet"
            Canvas.Left="76" Canvas.Top="222" HorizontalAlignment="Center" VerticalAlignment="Top"  />
        <Viewbox x:Name="TrackMapViewbox" Stretch="Uniform">
            <Image x:Name="TrackMap" Width="Auto" Height="Auto"></Image>
        </Viewbox>
        



    </Canvas>
</Window>