                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox Width="30" 
            Height="30" 
            BorderThickness="14" 
            Canvas.Left="90" Canvas.Top="194.5" 
            Panel.ZIndex="99" 
            BorderBrush="Transparent" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top"
            Background="Transparent" />
