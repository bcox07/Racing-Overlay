<Window x:Class="RacingOverlay.Windows.FullTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LiveTrackWindow" Height="300" Width="400"  Background="#00000000"  WindowStyle="None"
        Opacity="0.9" AllowsTransparency="True">

    <Canvas Name="TrackCanvas" Opacity="0.9" Cursor="Arrow" ClipToBounds="True" Margin="0,0,0,0">
        <TextBox x:Name="Player" Visibility="Hidden" TextWrapping="Wrap" Text="1" Width="30" Height="30" HorizontalAlignment="Left" TextAlignment="Center" >
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox Width="30" 
                 Height="30" 
                 BorderThickness="14" 
                 Canvas.Left="175" 
                 Canvas.Top="155" 
                 Panel.ZIndex="99" 
                 BorderBrush="Transparent" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Center"
                 Background="Purple" 
                 Visibility="Hidden"
                 TextChanged="TextBox_TextChanged" />

        <Image x:Name="TrackMap" Width="400" Height="300" Source="/TrackMaps/192-daytona/map.png"></Image>

    </Canvas>
</Window>