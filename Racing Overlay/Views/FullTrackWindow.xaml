            Height="30" 
            BorderThickness="14" 
            Canvas.Left="79" Canvas.Top="201" 
            Panel.ZIndex="99" 
            BorderBrush="Transparent" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Background="Transparent"  />
