<Window x:Class="IRacing_Standings.RelativeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IRacing_Standings"
        mc:Ignorable="d"
        Title="RelativeWindow" Height="189" Width="300" Opacity="0.85" AllowsTransparency="True" WindowStyle="None" Background="#00000000">
    <Border>
        <Border.Clip>
            <RectangleGeometry x:Name="RelativeGeometry" RadiusX="10" RadiusY="10" Rect="0,0,300,189"></RectangleGeometry>
        </Border.Clip>
        <Grid x:Name="RelativeGrid" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" Opacity="0.8" Cursor="Arrow">
        </Grid>
    </Border>
</Window>