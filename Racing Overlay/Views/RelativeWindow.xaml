<Window x:Class="RacingOverlay.RelativeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RacingOverlay"
        mc:Ignorable="d"
        Title="RelativeWindow" Height="189" Opacity="0.75" AllowsTransparency="True" WindowStyle="None" Background="#00000000">
    <Border>
        <Border.Clip>
            <RectangleGeometry x:Name="RelativeGeometry" RadiusX="10" RadiusY="10" ></RectangleGeometry>
        </Border.Clip>
        <Grid x:Name="RelativeGrid" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" Opacity="0.8" Cursor="Arrow">
        </Grid>
    </Border>
</Window>