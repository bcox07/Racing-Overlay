<Window x:Class="RacingOverlay.FuelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RacingOverlay"
        mc:Ignorable="d"
        Title="FuelWindow" Height="80" Width="180" Background="#00000000" Foreground="#D8000000" Opacity="0.85" WindowStyle="None" AllowsTransparency="True">
    <Window.Resources >
        <Style x:Name="TitleFieldStyle" x:Key="TitleField" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="{DynamicResource TitleFontSize}" />
            <Setter Property="FontWeight" Value="UltraBlack" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Name="DataFieldStyle" x:Key="DataField" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="{DynamicResource DataFontSize}" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <Border CornerRadius="10" Grid.Row="0" Grid.Column="0" Background="#D8000000">
        <Grid x:Name="fuelGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftColDefinition" Width="90"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border CornerRadius="10, 0, 0, 0" Background="#D8FFFFFF">
                <TextBlock Text="Fuel" Style="{StaticResource TitleField}" Foreground="Black" TextAlignment="Center" Grid.RowSpan="1" />
            </Border>
            <TextBlock x:Name="fuelRemainingCell" Style="{StaticResource DataField}" Text="49.57" Foreground="#D8FFFFFF" TextAlignment="Center" Grid.Row="1"  />
            <TextBlock Text="Add" Style="{StaticResource TitleField}" Foreground="Black" Background="#D8FFFFFF" TextAlignment="Center" Grid.Row="2" Grid.Column="0" />
            <TextBlock x:Name="fuelToAddCell" Style="{StaticResource DataField}" Text="19.99 - 23.34" Foreground="#D8FFFFFF" TextAlignment="Center" Padding="5" Grid.Row="3" Grid.RowSpan="3" Grid.Column="0"/>
            <Border CornerRadius="0, 10, 0, 0" Background="#D8FFFFFF" Grid.Row="0" Grid.Column="1"  Grid.ColumnSpan="2">
                <TextBlock Text="Est Laps"  Style="{StaticResource TitleField}" Foreground="Black" TextAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <TextBlock x:Name="lapsRemainingCell" Style="{StaticResource DataField}" Text="8.56" Foreground="#D8FFFFFF" TextAlignment="Center" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" />
            <TextBlock Text="Usage"  Style="{StaticResource TitleField}" Foreground="Black" Background="#D8FFFFFF" TextAlignment="Center"  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>
            <TextBlock Text="Avg:"  Style="{StaticResource TitleField}" Foreground="#D8FFFFFF" TextAlignment="Right" Grid.Row="3" Grid.Column="1"/>
            <TextBlock Text="Last 5:"  Style="{StaticResource TitleField}" Foreground="#D8FFFFFF" TextAlignment="Right" Grid.Row="4" Grid.Column="1"/>
            <TextBlock Text="Last:"  Style="{StaticResource TitleField}" Foreground="#D8FFFFFF" TextAlignment="Right" Grid.Row="5" Grid.Column="1"/>
            <TextBlock x:Name="avgFuelUsageCell" Style="{StaticResource DataField}" Text="3.22" Foreground="#D8FFFFFF" TextAlignment="Center" Grid.Row="3" Grid.Column="2"/>
            <TextBlock x:Name="last5FuelUsageCell" Style="{StaticResource DataField}" Text="3.17" Foreground="#D8FFFFFF" TextAlignment="Center" Grid.Row="4" Grid.Column="2"/>
            <TextBlock x:Name="lastFuelUsageCell" Style="{StaticResource DataField}" Text="3.25" Foreground="#D8FFFFFF" TextAlignment="Center" Grid.Row="5" Grid.Column="2"/>
        </Grid>
    </Border>
</Window>
