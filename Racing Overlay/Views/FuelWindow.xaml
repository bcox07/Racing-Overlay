<Window x:Class="RacingOverlay.FuelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RacingOverlay"
        mc:Ignorable="d"
        Title="FuelWindow" Height="120" Width="300" Background="#00000000" Foreground="#D8000000" Opacity="0.85" WindowStyle="None" AllowsTransparency="True">
    <Border CornerRadius="10" Grid.Row="0" Grid.Column="0" Background="#D8000000">
        <Grid x:Name="fuelGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border CornerRadius="10, 0, 0, 0" Background="#D8FFFFFF">
                <TextBlock Text="Fuel" Foreground="Black" FontSize="14" FontWeight="Bold" TextAlignment="Center" Grid.RowSpan="1" VerticalAlignment="Center" />
            </Border>
            <TextBlock x:Name="fuelRemainingCell" Text="49.57" Foreground="#D8FFFFFF" FontSize="16" FontWeight="Bold" TextAlignment="Center" Padding="0, 0, 0, 4" VerticalAlignment="Center" Grid.Row="1"  />
            <TextBlock Text="Add" Foreground="Black" Background="#D8FFFFFF" FontSize="14" FontWeight="Bold" TextAlignment="Center" Grid.Row="2" Grid.Column="0" />
            <TextBlock x:Name="fuelToAddCell" Text="19.99 - 23.34" Foreground="#D8FFFFFF"  FontSize="16" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="3" Grid.RowSpan="3" Grid.Column="0"/>
            <Border CornerRadius="0, 10, 0, 0" Background="#D8FFFFFF" Grid.Row="0" Grid.Column="1"  Grid.ColumnSpan="2">
                <TextBlock Text="Estimated Laps"  Foreground="Black" FontSize="14" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <TextBlock x:Name="lapsRemainingCell" Text="8.56" Foreground="#D8FFFFFF" FontSize="16" FontWeight="Bold" TextAlignment="Center" Padding="0, 0, 0, 4" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" />
            <TextBlock Text="Usage" Foreground="Black" Background="#D8FFFFFF" FontSize="14" FontWeight="Bold" TextAlignment="Center" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>
            <TextBlock Text="Avg:" Foreground="#D8FFFFFF" FontSize="14" FontWeight="Bold" TextAlignment="Right" Padding="0, 0, 0, 2" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1"/>
            <TextBlock Text="Last 5:" Foreground="#D8FFFFFF" FontSize="14" FontWeight="Bold" TextAlignment="Right" Padding="0, 0, 0, 2"  VerticalAlignment="Center" Grid.Row="4" Grid.Column="1"/>
            <TextBlock Text="Last Lap:" Foreground="#D8FFFFFF" FontSize="14" FontWeight="Bold" TextAlignment="Right" Padding="0, 0, 0, 2"  VerticalAlignment="Center" Grid.Row="5" Grid.Column="1"/>
            <TextBlock x:Name="avgFuelUsageCell" Text="3.22" Foreground="#D8FFFFFF" FontSize="14" FontWeight="Bold" TextAlignment="Center" Padding="0, 0, 0, 2" VerticalAlignment="Center" Grid.Row="3" Grid.Column="2"/>
            <TextBlock x:Name="last5FuelUsageCell" Text="3.17" Foreground="#D8FFFFFF" FontSize="14" FontWeight="Bold" TextAlignment="Center" Padding="0, 0, 0, 2" VerticalAlignment="Center" Grid.Row="4" Grid.Column="2"/>
            <TextBlock x:Name="lastFuelUsageCell" Text="3.25" Foreground="#D8FFFFFF" FontSize="14" FontWeight="Bold" TextAlignment="Center" Padding="0, 0, 0, 2" VerticalAlignment="Center" Grid.Row="5" Grid.Column="2"/>
        </Grid>
    </Border>
</Window>
