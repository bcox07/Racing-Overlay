<Window x:Class="RacingOverlay.StandingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RacingOverlay"
        mc:Ignorable="d"
        Title="StandingsWindow" Width="650" Opacity="0.85" AllowsTransparency="True" WindowStyle="None" Background="Black">
    <Border>
        <Grid x:Name="StandingsGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Opacity="0.85" Cursor="Hand" >
        </Grid>
    </Border>
</Window>
