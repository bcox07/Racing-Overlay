                <Button x:Name="tiresLock" Content="Lock" Style="{DynamicResource ButtonStyle}" Width="55" Click="tiresLock_Click" Grid.Column="1" />
                <Label Style="{StaticResource SliderLabel}" FontSize="14" Margin="0,3,0,0" Grid.Row="1" Grid.ColumnSpan="2">Opacity</Label>
                <Slider Style="{StaticResource Horizontal_Slider}" x:Name="TireOpacity" Width="220" Minimum="0" Maximum="100" ValueChanged="TireOpacity_ValueChanged" TickFrequency="5" Grid.Row="1" Grid.ColumnSpan="2" />
                
