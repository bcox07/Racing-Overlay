                <Button x:Name="fuelLock" Content="Lock" Style="{DynamicResource ButtonStyle}" Width="55" Click="fuelLock_Click" Grid.Column="1" />
                <Label Style="{StaticResource SliderLabel}" FontSize="14" Margin="0,3,0,0" Grid.Row="1" Grid.ColumnSpan="2">Opacity</Label>
                <Slider Style="{StaticResource Horizontal_Slider}" x:Name="FuelOpacity" Width="220" Minimum="0" Maximum="100" ValueChanged="FuelOpacity_ValueChanged" TickFrequency="5" Grid.Row="1" Grid.ColumnSpan="2" />
                <Button x:Name="fuelSave" Content="Save" Style="{DynamicResource ButtonStyle}" Width="200" Click="fuelSave_Click" Grid.Row="2" Grid.ColumnSpan="2" />
            </Grid>
        </TabItem>
        <TabItem Header="Tires" Style="{DynamicResource TabItemStyle}">
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="tiresReset" Style="{DynamicResource ButtonStyle}" Width="55" Click="tiresReset_Click" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{StaticResource di_reset_xaml}"/>
                    </StackPanel>
