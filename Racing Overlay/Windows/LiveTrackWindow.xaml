<Window x:Class="IRacing_Standings.Windows.LiveTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LiveTrackWindow" Height="450" Width="800" Background="#00000000" WindowStyle="None">
    <Grid Margin="0,10,0,0">
        <Image x:Name="Track" Source="/TrackMaps/roadamerica/Road_America.png" Margin="0,0,1,0"/>
        <TextBox x:Name="Player" TextWrapping="Wrap" Text="1" Width="25" Height="25" HorizontalAlignment="Left" TextAlignment="Center" Margin="361,404,0,0" RenderTransformOrigin="0.52,1.418" VerticalAlignment="Top" FontSize="16" >
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
    </Grid>
</Window>
